[user]
  email = jrbarton@gmail.com
  name = John Barton (joho)
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[apply]
	whitespace = nowarn
[branch]
  autosetupmerge = true
[alias]
  track = !sh -c 'git branch --track "$0" "origin/$0" && git checkout "$0"'
  ignored = "!git ls-files --others --exclude-standard"
  delete = !sh -c 'git branch -D "$0"; git push github ":$0"'
  find-branch = !sh -c 'git branch -a | grep $0'
  st = status
  pr = pull --rebase
  cav = commit -a -v
  co = checkout
  wtf = !git-wtf
[core]
	editor = mate -w
[gui]
	fontdiff = -family Inconsolata -size 14 -weight normal -slant roman -underline 0 -overstrike 0
[push]
  default = current